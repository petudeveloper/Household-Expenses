<div class="main-container">
  <div class="groups-container d-flex flex-column align-items-center h-auto pt-3 px-3 text-secondary">
    <% @groups.each do |group| %>
      <div class="d-flex bg-white shadow my-2">    
        <%= image_tag "macdonalds.png", class: 'w-25 rounded p-2' %>
        <div class="d-flex flex-column justify-content-center w-100">
          <div class="d-flex justify-content-between p-2 border-bottom mx-5">
            <span class="bold"><%= link_to group.name, group, class: 'text-decoration-none' %></span>
          </div>
          <p class="my-0 mx-5 p-2"> <%= group.created_at %> </p>
        </div>
      </div>
    <% end %>    
  </div>

  <div class="new-expense text-center w-100 p-4 fixed-bottom">
    <%= link_to 'New Group', new_group_path, class: 'text-white text-decoration-none py-2 px-5 border' %>
  </div>
</div>

