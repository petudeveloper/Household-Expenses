<div class="login-page-container d-flex flex-column align-items-center justify-content-center">
  <h2 class="lobster mb-5">HouseHold Expenses</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autocomplete: "name", placeholder: 'Name'  %>
    </div>

    <div class="field">
      <%= f.email_field :email, autocomplete: "email", placeholder: 'Email'  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation' %>
    </div>

    <div class="actions mt-4">
      <%= f.submit "SIGN UP", class: 'w-100 bg-primary border-0 text-white rounded px-5 py-2' %>
    </div>
    
    <div class="px-5 py-2 rounded">
      <%= link_to 'LOG IN', new_user_session_path, class: 'text-decoration-none ms-2' %>
    </div>
  <% end %>

</div>

